<%# carousel %>
<div class= "container"> 
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      
      <% @images.each_with_index do |a,i|%>
        <%if i == 0 %>
          <li data-target="#carouselExampleIndicators" data-slide-to="<% puts "#{i}" %>" class="active"></li>
        <% else %>
          <li data-target="#carouselExampleIndicators" data-slide-to= "<% puts "#{i}" %>"></li>
        <%end%>
      <% end %>
    </ol>
    <div class="carousel-inner">
        <% @images.each_with_index do |image, index|%>
        <% if index == 0 %>
          <div class="carousel-item active">
            <%= image_tag "#{@model_folder}/#{File.basename(image)}", class:"d-block w-100", alt:"..."%>
          </div>
        <% else %>
          <div class="carousel-item">
            <%= image_tag "#{@model_folder}/#{File.basename(image)}", class:"d-block w-100", alt:"..."%>
          </div>
        <% end %>
      <%end%>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>